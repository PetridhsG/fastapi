# ===============================
# Database configuration
# ===============================

# Hostname of the database
# Example: localhost or db (for Docker)
DATABASE_HOSTNAME=

# Database port
# Example: 5432
DATABASE_PORT=

# Database username
# Example: postgres
DATABASE_USERNAME=

# Database password (keep secret!)
DATABASE_PASSWORD=

# Database name
# Example: fastapi
DATABASE_NAME=


# ===============================
# Test database (optional â€“ used in CI / pytest)
# ===============================

# Test DB username
# Example: test_user
POSTGRES_USER=

# Test DB password
# Example: test_pass
POSTGRES_PASSWORD=

# Test DB name
# Example: test_db
POSTGRES_DB=


# ===============================
# Application settings
# ===============================

# Secret key for JWT / cryptography
# Example: generate a strong random string
SECRET_KEY=

# Algorithm used for JWT
ALGORITHM=HS256

# Token expiration time in minutes
# Example: 30
ACCESS_TOKEN_EXPIRE_MINUTES=
